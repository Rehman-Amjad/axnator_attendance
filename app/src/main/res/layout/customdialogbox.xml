<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change your password"
            android:textColor="@color/Mahroon"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/ed_current_Password"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColorHint="#C4706E6E"
            android:layout_marginLeft="2dp"
            android:paddingRight="12dp"
            android:drawableStart="@drawable/custom_password_icon"
            android:textSize="12sp"
            android:drawablePadding="15dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/Mahroon"
            android:drawableLeft="@drawable/custom_password_icon" />

        <EditText
            android:id="@+id/ed_new_password"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColorHint="#C4706E6E"
            android:layout_marginLeft="2dp"
            android:paddingRight="12dp"
            android:drawableStart="@drawable/custom_password_icon"
            android:textSize="12sp"
            android:drawablePadding="15dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/Mahroon"
            android:drawableLeft="@drawable/custom_password_icon" />


        <EditText
            android:id="@+id/ed_new_confirm_password"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColorHint="#C4706E6E"
            android:layout_marginLeft="2dp"
            android:paddingRight="12dp"
            android:drawableStart="@drawable/custom_password_icon"
            android:textSize="12sp"
            android:drawablePadding="15dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/Mahroon"
            android:drawableLeft="@drawable/custom_password_icon" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Confirm"

            android:layout_gravity="end"
            android:background="@drawable/custom_signup_btn"
            android:textColor="@color/white"
            />


    </LinearLayout>

</LinearLayout>