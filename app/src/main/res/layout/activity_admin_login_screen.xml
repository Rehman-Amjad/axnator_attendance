<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AdminActivity.AdminLoginScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/Mahroon"
        >
        <ImageView
            android:id="@+id/admin_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:fontFamily="sans-serif-black"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/education_splash2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="10dp"
                app:lottie_rawRes="@raw/animusername"
                app:lottie_loop="true"
                app:lottie_colorFilter="@color/Mahroon"
                app:lottie_autoPlay="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >


            <EditText
                android:id="@+id/ed_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Admin username"
                android:inputType="textPersonName"
                android:layout_marginLeft="2dp"
                android:drawableStart="@drawable/custom_user_icon"
                android:textSize="12sp"
                android:textColorHint="#C4706E6E"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:drawablePadding="15dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/Mahroon"
                android:drawableLeft="@drawable/custom_user_icon"
                android:layout_marginStart="2dp"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:hint="Admin Password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="#C4706E6E"
                android:layout_marginLeft="2dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/custom_password_icon"
                android:textSize="12sp"
                android:drawablePadding="15dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/Mahroon"
                android:drawableLeft="@drawable/custom_password_icon" />

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_gravity="end"
                android:padding="5dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >


            <Button
                android:id="@+id/btn_Login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Login"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>